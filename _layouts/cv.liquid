---
layout: default
---
{% unless site.data.resume %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
            ><i class="fa-solid fa-file-pdf"></i
          ></a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% for entry in site.data.cv %}
          <a class="anchor" id="{{ entry.title }}"></a>
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">{{ entry.title }}</h3>
            <div>
              {% if entry.type == 'list' %}
                {% include cv/list.liquid %}
              {% elsif entry.type == 'map' %}
                {% include cv/map.liquid %}
              {% elsif entry.type == 'nested_list' %}
                {% include cv/nested_list.liquid %}
              {% elsif entry.type == 'time_table' %}
                {% include cv/time_table.liquid %}
              {% elsif entry.type == 'list_groups' %}
                {% include cv/list_groups.liquid %}
              {% else %}
                {{ entry.contents }}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% else %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
            ><i class="fa-solid fa-file-pdf"></i
          ></a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% for data in site.data.resume %}
          {% if site.jsonresume and site.jsonresume.size > 0 %}
            {% unless site.jsonresume contains data[0] %}
              {% continue %}
            {% endunless %}
          {% endif %}
          {% if data[0] == 'meta' or data[1].size == 0 %} {% continue %} {% endif %}
          <a class="anchor" id="{{ data[0] }}"></a>
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">{{ data[0] | capitalize }}</h3>
            <div>
              {% case data[0] %}
                {% when 'Info_Basica' %}
                  {% include resume/Info_Basica.liquid %}
                {% when 'Educacion' %}
                  {% include resume/Educacion.liquid %}
                {% when 'Exp_Laboral' %}
                  {% include resume/Exp_laboral.liquid %}
                {% when 'Trabajo_Voluntario' %}
                  {% include resume/Trabajo_Voluntario.liquid %}
                {% when 'Proyectos' %}
                  {% include resume/Proyectos.liquid %}
                {% when 'Premios' %}
                  {% include resume/Premios.liquid %}
                {% when 'Habilidades' %}
                  {% include resume/Habilidades.liquid %}
                {% when 'Publicaciones' %}
                  {% include resume/Publicaciones.liquid %}
                {% when 'Idiomas' %}
                  {% include resume/Idiomas.liquid %}
                {% when 'Intereses' %}
                  {% include resume/Intereses.liquid %}
                {% when 'Certificados' %}
                  {% include resume/Certificados.liquid %}
                {% when 'Referencias' %}
                  {% include resume/Referencias.liquid %}
                {% else %}

              {% endcase %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% endunless %}
